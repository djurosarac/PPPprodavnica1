@model IEnumerable<PPPprodavnica1.Prodavnica>

@{
    ViewBag.Title = "Prodavnica";
}
    <div class="container">
        <h2 style="margin:20px; text-align:center">Pregled stanja u prodavnici</h2>

        <p>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Novi unos", "Create")
            }
        </p>
        <table class="table table-striped table-dark">
            <tr>
                <th class="thead-dark">
                    @Html.DisplayNameFor(model => model.Kolicina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.datum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vreme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proizvod.Naziv)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kolicina)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vreme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proizvod.Naziv)
                    </td>
                    <td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Izmeni ", "Edit", new { id = item.RbUnosa }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Obrisi ", "Delete", new { id = item.RbUnosa }, new { @class = "btn btn-danger" })
                        }
                        @Html.ActionLink("Detalji", "Details", new { id = item.RbUnosa }, new { @class = "btn btn-info" }) 

                    </td>
                </tr>
            }

        </table>
    </div>