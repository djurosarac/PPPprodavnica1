@model IEnumerable<PPPprodavnica1.Otpremnica>

@{
    ViewBag.Title = "Index";
}

    <div class="container">

        <h2 style="margin:20px; text-align:center">Otpremnice</h2>

        <p>
            @Html.ActionLink("Napravi novu", "Create", new { }, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-hover">
            <tr style="background-color:#111111;color:ghostwhite">
                <th>
                    @Html.DisplayNameFor(model => model.Kolicina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Datum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vreme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proizvod.Naziv)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kolicina)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vreme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proizvod.Naziv)
                    </td>
                    <td>
                        @Html.ActionLink("Izmeni", "Edit", new { id = item.IDOtpremnice }, new { @class = "btn btn-primary" })|
                        @Html.ActionLink("Detalji", "Details", new { id = item.IDOtpremnice }, new { @class = "btn btn-danger" })|
                        @Html.ActionLink("Obrisi", "Delete", new { id = item.IDOtpremnice }, new { @class = "btn btn-info" }))
                    </td>
                </tr>
            }

        </table>
    </div>